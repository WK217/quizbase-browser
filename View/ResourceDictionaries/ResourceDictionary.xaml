<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="correctColor" Color="#b7e1cd" />
    <SolidColorBrush x:Key="selectedRowColor" Color="#b5d8ff" />

    <Style x:Key="header" TargetType="FrameworkElement">
        <Setter Property="Margin" Value="5,0,0,2" />
    </Style>

    <Style
        x:Key="label"
        BasedOn="{StaticResource header}"
        TargetType="TextBlock">
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="HorizontalAlignment" Value="Left" />
    </Style>

    <Style
        x:Key="pageHeader"
        BasedOn="{StaticResource label}"
        TargetType="TextBlock">
        <Setter Property="FontSize" Value="20" />
    </Style>
</ResourceDictionary>